<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToDo Application Manager User Guide"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to the ToDo Application Manager! This guide will help you navigate and use the app effectively."
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Getting Started"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Download the app from the Google Play Store."
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Open the app from your home screen or app drawer."
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Screen Overview"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Add Task: Enter a task in the text field and tap the 'Add' button to add it to your task list."
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• View Deleted Tasks: Tap the 'View Deleted Tasks' button to see tasks you have deleted."
            android:paddingBottom="16dp" />

        <!-- Add more sections similar to the above for other functionalities -->

    </LinearLayout>
</ScrollView>