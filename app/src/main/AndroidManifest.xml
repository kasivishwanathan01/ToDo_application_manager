<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.todoapplicationmanager">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".UserGuideActivity"
            android:exported="false"></activity>
        <activity android:name=".DeletedTasksActivity"
            android:exported="false"></activity>
        <activity android:name=".EditTaskActivity"
            android:exported="false"></activity>
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="example" android:host="createtask" />
            </intent-filter>
        </activity>
    </application>

</manifest>